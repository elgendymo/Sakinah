{
  "name": "sakinah-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "npm run start --prefix apps/api & npm run start --prefix apps/ui",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "security:audit": "./scripts/security-audit.sh",
    "security:check": "npm outdated",
    "security:reinstall": "rm -rf node_modules package-lock.json && npm install"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "1.16.10",
    "adhan": "4.4.3",
    "framer-motion": "^12.23.22",
    "react-google-autocomplete": "2.7.5",
    "vercel": "^41.0.2"
  },
  "overrides": {
    "simple-swizzle": "0.2.4",
    "strip-ansi": "6.0.1",
    "supports-color": "7.2.0",
    "wrap-ansi": "8.1.0",
    "ansi-regex": "<6.2.1",
    "ansi-styles": "<6.2.2",
    "chalk": "<5.6.1",
    "color": "<5.0.1",
    "debug": "<4.4.2"
  }
}
