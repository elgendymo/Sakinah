{
  "version": 2,
  "builds": [
    {
      "src": "apps/ui/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/ui/$1"
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max_old_space_size=4096",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max_old_space_size=4096"
    }
  }
}