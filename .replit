modules = ["web", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "api"

[[workflows.workflow]]
name = "frontend"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/ui && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "api"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/api && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45501
externalPort = 3000

[deployment]
deploymentTarget = "vm"
build = ["bash", "-c", "npm install --legacy-peer-deps && npm run build"]
run = ["npm", "start"]
